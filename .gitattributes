#変数宣言

num = 1
name = 'Mike'
is_ok = True

print(num,type(num))      #numのタイプがわかる
print(name,type(name))
print(is_ok,type(is_ok))

num = name  #numにnameを代入する

name1 = '1' #1nameとは書けない

new_num = int(name1)

print(new_num,type(new_num))


#まずはprintで出力

print('Hi','Mike',end='\n') #Hi Mike
print('Hi','Mike',sep=',',end='\n') #Hi,Mike

print('Hi','Mike',sep=',',end='')
print('Hi','Mike',sep=',',end='') #Hi,MikeHi,Mike

#数値

2+2 #4

5-2 #3

5*6 #30

50-5*6 #20

(50-5)*6 #270

8/5 #1.6

17//3 #5

17%3 #2

5**2 #25

5*5*5*5*5 #5**5

x = 5
y = 10

x*y  #50

pie = 3.141515151515151515
round(pie, 2)  #3.14 round to 2 decimal places

exit()  #exit the interactive shell

clear #cllear the interactive shell

import math

result = math.sqrt(25) #5
print(result)

y = math.log2(10) #3.321928094887362
print(y)

print(help(math)) #math関数について確認

#文字列

print('Hello')
print("Hello")
print('I don't know ')   '  #発言が途中で止まってしまう

print('I don\'t know ')　　#\'とすることで''が途中で途切れないようにしている
print("I don't know")

print('say "I don\'t know"')
print("say \"I don't know\"")








