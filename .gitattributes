# Auto detect text files and perform LF normalization
* text=auto
#variable declaration

num = 1
name = 'Mike'
is_ok = True

print(num,type(num))      #type tells you type of variable
print(name,type(name))
print(is_ok,type(is_ok))

num = name  #num change int into str

name1 = '1' #you can't write 1name

new_num = int(name1)

print(new_num,type(new_num))


#print

print('Hi','Mike',end='\n') #Hi Mike
print('Hi','Mike',sep=',',end='\n') #Hi,Mike

print('Hi','Mike',sep=',',end='')
print('Hi','Mike',sep=',',end='') #Hi,MikeHi,Mike


